<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dip"
    android:descendantFocusability="blocksDescendants">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="10sp"
        android:focusable="false"
        android:focusableInTouchMode="false">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/checkFileBox" />

        <TextView
            android:id="@+id/observationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:textSize="20sp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/checkFileBox"
            android:layout_toEndOf="@+id/checkFileBox" />

        <TextView
            android:id="@+id/observationTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:textSize="10sp"
            android:focusable="false"
            android:text="Time"
            android:focusableInTouchMode="false"
            android:layout_below="@+id/observationName"
            android:layout_toRightOf="@+id/checkFileBox"
            android:layout_toEndOf="@+id/checkFileBox" />
    </RelativeLayout>
</RelativeLayout>